<div class="row index-pagination-row">
  <div class="col-sm-6">
    <%= paginate collection %>
  </div>
  <div class="col-sm-6">
    <div class="pagination-wrap">
      <%= form_tag({ :action => "index"}, { :method => "get", :id => "js-per-page-form", :class => 'form-inline' }) do %>
          <%# on paste les vieux params parceque c'est ce formulaire la qui est submiter quand on change le nombre par page %>
          <% if params[:q] %>
              <% params[:q].each do | p| %>
                <%= hidden_field_tag "q[#{p[0]}]", p[1] %>
              <% end %>
          <% end %>

      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>
</div>

<% content_for :head do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      $("#js-per-page-select").change(function() {
        $("#js-per-page-form").submit();
      });
    });
  <% end %>
<% end %>
